
#Drawing a circle with square

import turtle

def draw_art(some_turtle):
    for i in range(1,5):
        some_turtle.forward(100)
        some_turtle.right(90)
        
    
def draw_square():
    window = turtle.Screen()
    window.bgcolor("red")
    
    brad = turtle.Turtle()
    brad.shape("turtle")
    brad.color("green")
    brad.width(2)
    brad.speed(20)

    for i in range(1,37):
        draw_art(brad)
        brad.left(10)
    window.exitonclick()
    
draw_square()
